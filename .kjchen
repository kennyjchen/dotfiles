#!/bin/sh

# setup dotfiles
git clone --bare git@github.com:kennyjchen/dotfiles.git $HOME/.dotfiles
/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME checkout

# apt
sudo apt install -y build-essential git git-lfs
sudo apt install -y clang-format curl htop neofetch npm ripgrep tmux universal-ctags xclip
sudo apt install -y python3-pip python3-virtualenv python3-virtualenvwrapper
sudo apt install -y simplescreenrecorder

# snap
sudo snap install --classic aws-cli 
sudo snap install --classic code
sudo snap install --classic gitkraken
sudo snap install --classic nvim
sudo snap install --classic obsidian
sudo snap install --classic sublime-text
sudo snap install --classic tmux 

sudo snap install ffmpeg
sudo snap install foxglove-studio
sudo snap install slack
sudo snap install universal-ctags
sudo snap install vlc
sudo snap install zotero-snap

# tailscale
curl -fsSL https://tailscale.com/install.sh | sh

# neovim
ln -s $HOME/.vimrc $HOME/.config/nvim/init.vim

# tmux plugin manager
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# nodejs
sudo npm cache clean -f
sudo npm install -g n
sudo n stable
