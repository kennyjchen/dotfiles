#!/bin/sh

# Set up dotfiles
git clone --bare git@github.com:kennyjchen/dotfiles.git $HOME/.dotfiles
/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME checkout

# Aptitude
sudo apt install -y vim tmux git curl htop neofetch
sudo apt install -y python3-pip python3-catkin-tools autoconf
sudo apt install -y fonts-firacode

# Tmux Plugin Manager
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# ROS
sudo sh -c 'echo "deb http://packages.ros.org/ros/ubuntu $(lsb_release -sc) main" > /etc/apt/sources.list.d/ros-latest.list'
curl -s https://raw.githubusercontent.com/ros/rosdistro/master/ros.asc | sudo apt-key add -
sudo apt install -y ros-noetic-desktop-full

# Install ThirdParty Software
mkdir ~/Software/
mkdir ~/Software/ThirdParty/
cd ~/Software/ThirdParty

# Universal Ctags
git clone https://github.com/universal-ctags/ctags.git
cd ./ctags
./autogen.sh
./configure --prefix=/home/kjchen/.local
make
make install

# virtualenv
pip3 install virtualenv 

# virtualenvwrapper
pip3 install virtualenvwrapper

# pyenv
git clone https://github.com/pyenv/pyenv.git ~/.pyenv
cd ~/.pyenv && src/configure && make -C src

# pyenv-virtualenv
git clone https://github.com/pyenv/pyenv-virtualenv.git $(pyenv root)/plugins/pyenv-virtualenv

# pyenv-virtualenvwrapper
git clone https://github.com/pyenv/pyenv-virtualenvwrapper.git $(pyenv root)/plugins/pyenv-virtualenvwrapper

